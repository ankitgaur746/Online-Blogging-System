<% include ../partials/header %>
<div class="container">
<div class="row">
 <h1 style="text-align:center ;">Edit <%= blog.name %></h1>
   
     <div style = " width : 60% ; margin : 25px auto ;">
        <form action="/blogs/<%= blog._id %>?_method=PUT"  method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="blog[name]" value=" <%= blog.name %>" required></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="blog[image]" value=" <%= blog.image %>" required></input>
            </div>
             <div class="form-group">
                <input class="form-control" type="text" name="blog[description]" value=" <%= blog.description %>" required></input>
            </div>
            <div class="form-group">
                <input type="submit" class= "btn  btn-success "></input>
            </div>
            
            
            
        </form>
         <a href="/blogs">go back</a>
      </div>
 </div>
</div>
